---
import BaseLayout from '../layouts/BaseLayout.astro';
import NavBar from '../components/NavBar';
import Hero from '../components/Hero';
import Footer from '../components/Footer';
---

<BaseLayout title="NavAIgate - AI Consultancy | Custom AI Tools & Ente-prise">
  <!-- Navigation -->
  <NavBar client:load />

  <!-- Hero Section -->
  <Hero client:load />

  <!-- About Section (Phase 4) -->
  <section id="about" class="py-20 px-6">
    <div class="max-w-6xl mx-auto text-center">
      <p class="text-gray-500">About section coming in Phase 4</p>
    </div>
  </section>

  <!-- Clients Section (Phase 5) -->
  <section id="clients" class="py-20 px-6 bg-gray-900/50">
    <div class="max-w-6xl mx-auto text-center">
      <p class="text-gray-500">Client showcase coming in Phase 5</p>
    </div>
  </section>

  <!-- Ente-prise Section (Phase 6) -->
  <section id="enteprise" class="py-20 px-6">
    <div class="max-w-6xl mx-auto text-center">
      <p class="text-gray-500">Ente-prise product section coming in Phase 6</p>
    </div>
  </section>

  <!-- Contact Section (Phase 8) -->
  <section id="contact" class="py-20 px-6 bg-gray-900/50">
    <div class="max-w-6xl mx-auto text-center">
      <p class="text-gray-500">Contact form coming in Phase 8</p>
    </div>
  </section>

  <!-- Footer -->
  <Footer client:load />
</BaseLayout>
