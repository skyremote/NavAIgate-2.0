---
import BaseLayout from '../layouts/BaseLayout.astro';
import NavBar from '../components/NavBar';
import Hero from '../components/Hero';
import ClientLogos from '../components/ClientLogos';
import AboutSection from '../components/AboutSection';
import AppsSection from '../components/AppsSection';
import EntepriseSection from '../components/EntepriseSection';
import ContactSection from '../components/ContactSection';
import Footer from '../components/Footer';
---

<BaseLayout title="NavAIgate - AI Consultancy | Custom AI Tools & Ente-prise">
  <!-- Navigation -->
  <NavBar client:load />

  <!-- Hero Section -->
  <Hero client:load />

  <!-- Client Logos Marquee -->
  <ClientLogos client:load />

  <!-- About Section -->
  <AboutSection client:load />

  <!-- Free Apps Section -->
  <AppsSection client:load />

  <!-- Ente-prise Product Section -->
  <EntepriseSection client:load />

  <!-- Contact Section -->
  <ContactSection client:load />

  <!-- Footer -->
  <Footer client:load />
</BaseLayout>
