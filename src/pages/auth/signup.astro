---
import BaseLayout from '../../layouts/BaseLayout.astro';
import SignupForm from '../../components/auth/SignupForm';
import { ArrowLeft } from 'lucide-react';
export const prerender = true;
---

<BaseLayout title="Sign Up" description="Create your NavAIgate account">
  <div class="min-h-screen flex flex-col">
    <!-- Header -->
    <header class="p-6">
      <a href="/" class="inline-flex items-center gap-2 text-gray-400 hover:text-white transition-colors">
        <ArrowLeft className="w-5 h-5" />
        Back to home
      </a>
    </header>

    <!-- Main Content -->
    <main class="flex-1 flex items-center justify-center px-4 py-12">
      <div class="w-full max-w-md">
        <!-- Logo -->
        <div class="text-center mb-8">
          <a href="/" class="inline-block">
            <img src="/navaigate-logo.svg" alt="NavAIgate" class="h-10 mx-auto mb-4" onerror="this.style.display='none'" />
            <h1 class="text-3xl font-bold bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">
              NavAIgate
            </h1>
          </a>
        </div>

        <!-- Title -->
        <div class="text-center mb-8">
          <h2 class="text-2xl font-bold text-white mb-2">Create your account</h2>
          <p class="text-gray-400">Start navigating AI with confidence</p>
        </div>

        <!-- Signup Form -->
        <SignupForm client:load />
      </div>
    </main>

    <!-- Footer -->
    <footer class="p-6 text-center text-gray-500 text-sm">
      <p>&copy; {new Date().getFullYear()} NavAIgate. All rights reserved.</p>
    </footer>
  </div>
</BaseLayout>
